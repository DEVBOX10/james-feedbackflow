@namespace FeedbackWebApp.Components.Shared
@implements IAsyncDisposable
@inject IAuthTokenRefreshService TokenRefreshService
@inject ILogger<AuthTokenRefreshManager> Logger

@* This component manages automatic authentication token refresh *@

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await TokenRefreshService.InitializeAsync();
                await TokenRefreshService.StartAutoRefreshAsync();
                Logger.LogInformation("Authentication token refresh manager started");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to start authentication token refresh manager");
            }
        }
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            await TokenRefreshService.StopAutoRefreshAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error stopping token refresh service during disposal");
        }
    }
}
