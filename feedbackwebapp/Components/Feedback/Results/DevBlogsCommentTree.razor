@using SharedDump.Models.DevBlogs
@using Microsoft.AspNetCore.Components

@if (CommentData != null)
{
    <article class="devblogs-comment" role="comment" aria-label="Comment by @CommentData.Author">
        <div class="comment-container">
            <header class="comment-header">
                <div class="comment-meta">
                    <div class="author" title="Comment author">
                        <i class="bi bi-person-circle" aria-hidden="true"></i>
                        <span class="fw-medium">@CommentData.Author</span>
                    </div>
                    @if (CommentData.PublishedUtc != null)
                    {
                        <time class="timestamp" 
                              datetime="@CommentData.PublishedUtc.Value.ToString("O")"
                              title="@CommentData.PublishedUtc.Value.LocalDateTime.ToString("F")">
                            <i class="bi bi-clock" aria-hidden="true"></i>
                            <span>@CommentData.PublishedUtc.Value.LocalDateTime.ToString("g")</span>
                        </time>
                    }
                </div>
            </header>
            <div class="comment-body" tabindex="0">
                @if (!string.IsNullOrEmpty(CommentData.BodyHtml))
                {
                    @((MarkupString)CommentData.BodyHtml)
                }
            </div>
            @if (CommentData.Replies?.Count > 0)
            {
                <section class="replies-container" aria-label="Replies">
                    @foreach (var reply in CommentData.Replies)
                    {
                        <DevBlogsCommentTree CommentData="reply" />
                    }
                </section>
            }
        </div>
    </article>
}

@code {
    [Parameter] public DevBlogsCommentModel? CommentData { get; set; }
}
