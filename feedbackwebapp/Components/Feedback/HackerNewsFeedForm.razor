@namespace FeedbackWebApp.Components.Feedback

<div class="hackernews-feed-form">
    <div class="keywords-container mb-3">
        <label class="form-label">Keywords</label>
        @foreach (var (keyword, index) in Keywords.Select((k, i) => (k, i)))
        {
            <div class="input-group mb-2">
                <input type="text" class="form-control" placeholder="Enter keyword"
                       @bind="Keywords[index]" @bind:event="oninput" />
                <button class="btn btn-outline-danger" type="button" @onclick="() => RemoveKeyword(index)">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        }
        @if (Keywords.Count < 5)
        {
            <button class="btn btn-outline-primary" type="button" @onclick="AddKeyword">
                <i class="bi bi-plus-lg me-1"></i>
                Add Keyword
            </button>
        }
        <div class="form-text">Add up to 5 keywords to search for in article titles</div>
    </div>
</div>

@code {
    public List<string> Keywords { get; } = new() { "" };

    private void AddKeyword()
    {
        if (Keywords.Count < 5)
        {
            Keywords.Add("");
        }
    }

    private void RemoveKeyword(int index)
    {
        if (Keywords.Count > 1)
        {
            Keywords.RemoveAt(index);
        }
    }
}