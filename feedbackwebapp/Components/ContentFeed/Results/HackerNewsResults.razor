@namespace FeedbackWebApp.Components.ContentFeed.Results
@using SharedDump.Models.HackerNews

@if (StoryItems?.Any() == true)
{
    <div class="hackernews-results">
        @foreach (var item in StoryItems)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="card-title mb-1">
                            <i class="bi bi-newspaper text-warning me-2"></i>
                            @item.Title
                        </h5>
                        <a href="@item.Url" target="_blank" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                    </div>
                    
                    <div class="item-meta mt-2">
                        <small class="text-muted">
                            Posted by @item.Author | @item.Score points | @item.Time.ToLocalTime().ToString("g")
                        </small>
                    </div>
                    
                    @if (item.Comments?.Any() == true)
                    {
                        <div class="mt-3">
                            <button class="btn btn-sm btn-outline-light" @onclick="() => ToggleComments(item.Id)">
                                @(ExpandedItems.Contains(item.Id) ? "Hide" : "Show") Comments (@item.Comments.Length)
                            </button>

                            @if (ExpandedItems.Contains(item.Id))
                            {
                                <div class="comments-container mt-3">
                                    @foreach (var comment in item.Comments)
                                    {
                                        <FeedbackWebApp.Components.ContentFeed.Results.HackerNewsComment Comment="comment" />
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public List<HackerNewsItem>? StoryItems { get; set; }

    private HashSet<string> ExpandedItems { get; } = new();

    private void ToggleComments(string itemId)
    {
        if (ExpandedItems.Contains(itemId))
            ExpandedItems.Remove(itemId);
        else
            ExpandedItems.Add(itemId);
    }
}